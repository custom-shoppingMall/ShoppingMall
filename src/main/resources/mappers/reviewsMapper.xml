<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.example.mapper.reviewMapper">
  
	<select id ="selectListReview" resultType="reviewVO">
		SELECT
			content,
			title,
			indate AS inDate,
			image,
			hit,
			users_usernumber AS usersNumber,
			products_productnumber AS productsNumber,
			reviews_number AS reviewsNumber
		FROM reviews
	</select>
	<insert id="insertReview" parameterType="reviewVO" >
		INSERT INTO reviews
		(content,title,image,hit,users_usernumber,products_productnumber,indate)
			VALUE (#{content},
					#{title},
					#{image},
					#{hit},
					#{usersNumber},
					#{productsNumber},
					#{inDate}
				)
	</insert>
	<update id="updateReview" parameterType="reviewVO">
		UPDATE reviews
			SET content = #{content},
				title = #{title},
				image = #{image}
		WHERE (reviews_number = #{reviewsNumber})
			
			
	</update>
	<delete id="deleteReview" parameterType="reviewVO">
		DELETE 
		FROM reviews
		WHERE (reviews_number = #{reviewsNumber})
	</delete>
</mapper>
